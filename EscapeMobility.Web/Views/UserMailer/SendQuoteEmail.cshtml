@using System.Net.Mime
@using Tweetinvi.Core.Extensions
@model EscapeMobility.Web.Models.QuoteViewModel

************************************************************************<br />
FROM ESCAPE-MOBILITY-USA.COM<br />
************************************************************************<br />

@Html.DisplayFor(m => m.FirstName) @Html.DisplayFor(m => m.LastName)<br />
@Model.Title<br />
@Model.Phone<br />
@Model.Address1<br />
@(string.IsNullOrEmpty(Model.Address2) ? Model.Address2 : "") 
@Model.City<br />
@Model.State<br />
@Model.Zip<br />
@Model.Email<br />
@Model.Company<br /><br />

Comments:<br />
<p>
    @Model.Comments
</p>

    <ul>
        @{
            if ((Model.ShoppingCart.CartItems != null) && (Model.ShoppingCart.CartItems.Count > 0))
            {
                foreach (var item in Model.ShoppingCart.CartItems)
                {
                    <li>@item.Quantity x @item.Product.Title </li>
                }
            }
        }
    </ul>
