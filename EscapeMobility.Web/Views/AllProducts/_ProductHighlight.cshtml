@model EscapeMobility.Web.Models.ProductHighlightModel
<div class="overviewBlock">
    <div class="obImage">
        <img src="~/Content/images/@Model.ImageFileName" class="overviewImage">
    </div>
    <h2>@Html.DisplayFor(m => m.Name)</h2>
    <p>
        @Html.DisplayFor(m => m.ShortDescription)
    </p>
    <div id="piPrice">

        <div class="price">@Html.DisplayFor(m => m.Price)</div>

    </div><div id="piPriceVAT">excl. Tax</div><div class="clear"></div>
    @Html.ActionLink("More Information", MVC.AllProducts.Details(Model.ProductID), new { @class = "contentButton moreInfo" })
    @Html.ActionLink("Add to Quote", MVC.Quote.AddToQuote(Model.ProductID), new { @class = "contentButton  addToBasket" })
</div>
