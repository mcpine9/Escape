@model EscapeMobility.Web.Models.CustomSpecsViewModel
@{
    ViewBag.Title = "Add Custom Specifications";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-12 col-md-pull-1">
                <h4>Add Custom Specifications</h4>
                <h3>@ViewBag.productTitle</h3>
                <hr />
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-6 col-sm-pull-2">
                <strong>Key</strong>
            </div>
            <div class="col-sm-6 col-sm-pull-2">
                <strong>Value</strong>
            </div>

        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-5">
                <input type="text" name="key" id="key" class="form-control" />
            </div>
            <div class="col-md-5">
                <div class="input-group">
                    <input type="text" name="value" id="value" class="form-control" />
                    <div class="input-group-addon">
                        <span><i class="fa fa-pencil-square-o"></i></span>
                        <span><i class="fa fa-check"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-md-offset-0">
                <a class="btn btn-danger" href="#">
                    <i class="fa fa-trash-o fa-lg"></i> Delete
                </a>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5">
                <input type="text" name="key" id="key" class="form-control" />
            </div>
            <div class="col-md-5">
                <div class="input-group">
                    <input type="text" name="value" id="value" class="form-control" />
                    <div class="input-group-addon">
                        <span><i class="fa fa-pencil-square-o"></i></span>
                        <span><i class="fa fa-check"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-md-offset-0">
                <a class="btn btn-danger" href="#">
                    <i class="fa fa-trash-o fa-lg"></i> Delete
                </a>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5">
            </div>
            <div class="col-md-5">
            </div>
            <div class="col-md-2 col-md-offset-0">
                <a class="btn btn-info" href="#">
                    <i class="fa fa-plus"></i> Add Spec
                </a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 col-md-pull-1">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 col-md-pull-1">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
    <input type="hidden" id="productId" value="@ViewBag.productId" />
    @Html.HiddenFor(m => m.CustomSpecJSONObject, new { id = "json" })
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
}

@section pagescripts
{
    
}
