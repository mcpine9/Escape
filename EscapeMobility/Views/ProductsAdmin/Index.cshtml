            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SimilarTags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductSpecificationId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ProductId }) |
