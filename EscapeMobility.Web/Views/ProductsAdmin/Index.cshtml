@model EscapeMobility.Web.Models.ProductsAdminViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<hr/>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table id="Product_table" class="table table-striped table-condensed table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.LongDescription)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Thumbnailfolder)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Product.Price)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Product.ArticleNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.VideoSampleURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.IsAccessory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectedCategories)
            </th>
            @*
            <th>
                @Html.DisplayNameFor(model => model.SafetyTags)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelatedTags)
            </th><th>
                @Html.DisplayNameFor(model => model.ProductSpecificationId)
            </th>*@
            <th>@Html.DisplayNameFor(model => model.Product.ImageFileName)</th>
            <th></th>
        </tr>

    @foreach (var item in Model.Products)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td class="tbl-longdescription">
                @Html.DisplayFor(modelItem => item.LongDescription)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Thumbnailfolder)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ArticleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoSampleURL)
            </td>
            <td class="center">
                @Html.Raw(item.IsAccessory ? "<i class=\"fa fa-check-square-o\"></i>" : "<i class=\"fa fa-square-o\"></i>")
            </td>
            <td>
                @Html.Raw(Model.SelectedCategories[item.ProductId])
            </td>
            @*
                <td>
                    @Html.DisplayFor(modelItem => item.SafetyTags)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RelatedTags)
                </td><td>
                    @Html.DisplayFor(modelItem => item.ProductSpecificationId)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ImageFileName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }

</table>