@model IEnumerable<Escape.Data.Model.Product>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table id="Product_table" class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thumbnailfolder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArticleNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoSample)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SafetyTags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SimilarTags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductSpecificationId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thumbnailfolder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoSample)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SafetyTags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SimilarTags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductSpecificationId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }

</table>